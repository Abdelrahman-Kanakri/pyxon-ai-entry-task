# ============================== Application Settings ==============================
APP_NAME=Pyxon AI Document Parser
APP_VERSION=1.0.0
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================== SQL Database Configuration (PostgreSQL) ==============================
# Primary database for metadata, chunks, and structured data
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pyxon_parser
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_ECHO=false

# Database URL format: postgresql+psycopg2://user:password@host:port/dbname
DATABASE_URL=postgresql+psycopg2://postgres:your_postgres_password@localhost:5432/pyxon_parser

# ============================== Vector Database Configuration (Chroma) ==============================
# Chroma vector database for semantic search and embeddings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_DB_PATH=./data/chroma_db
# Options: http, persistent, ephemeral
CHROMA_CLIENT_TYPE=persistent

# ============================== Embeddings Configuration ==============================
# Embedding model for generating vector representations
EMBEDDING_MODEL=intfloat/multilingual-e5-small
# Options: sentence-transformers, openai, huggingface
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_DIMENSION=384

# ============================== LLM & API Configuration ==============================
# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# Google GenAI Configuration
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here
GOOGLE_GENAI_MODEL=gemini-3-pro-preview

# LangSmith Configuration (for LLM monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=pyxon-document-parser

# ============================== Document Processing ==============================
# Chunk size for document splitting (in tokens)
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# OCR Configuration
OCR_ENABLED=true
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
OCR_LANGUAGE=ara+eng

# Document upload limits
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,doc,xlsx

# ============================== Arabic Language Support ==============================
# Arabic text processing configuration
ARABIC_SUPPORT_ENABLED=true
NORMALIZE_DIACRITICS=true
PRESERVE_DIACRITICS=false
ARABIC_MODEL=AraBERT

# ============================== Search & Retrieval Configuration ==============================
# Number of results to retrieve
RETRIEVAL_TOP_K=5
# Reranker settings
ENABLE_RERANKING=true
RERANK_MODEL=cross-encoder/mmarco-mMiniLMv2-L12-H384
# Retrieval strategy: hybrid, semantic, keyword
RETRIEVAL_STRATEGY=hybrid

# ============================== Data Paths ==============================
# Document storage paths
DOCUMENTS_PATH=./data/documents
UPLOADS_PATH=./data/uploads
BENCHMARKS_PATH=./data/benchmarks

# Sample documents path
SAMPLE_DOCUMENTS_PATH=./benchmarks/sample_documents

# ============================== Redis Cache Configuration ==============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
ENABLE_CACHE=true

# ============================== API Configuration ==============================
# FastAPI settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Streamlit settings
STREAMLIT_PORT=8501
STREAMLIT_SERVER_HEADLESS=false

# ============================== Logging Configuration ==============================
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================== Benchmark Settings ==============================
# Benchmark configuration
BENCHMARK_ENABLED=true
BENCHMARK_SAMPLE_SIZE=100
BENCHMARK_TIMEOUT=300